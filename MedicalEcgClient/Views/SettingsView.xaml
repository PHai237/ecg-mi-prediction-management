<UserControl x:Class="MedicalEcgClient.Views.SettingsView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:vm="clr-namespace:MedicalEcgClient.ViewModels"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             mc:Ignorable="d" 
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             d:DataContext="{d:DesignInstance Type=vm:SettingsViewModel}">

    <Grid Background="White">
        <StackPanel MaxWidth="600" Margin="40">
            <TextBlock Text="CÀI ĐẶT HỆ THỐNG" FontSize="24" FontWeight="Bold" Foreground="#0D6EFD" Margin="0,0,0,30"/>

            <GroupBox Header="Kết Nối Thiết Bị" Padding="15" Margin="0,0,0,20">
                <StackPanel>
                    <Grid Margin="0,0,0,10">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <StackPanel Margin="0,0,10,0">
                            <TextBlock Text="Cổng COM (ECG)" FontWeight="SemiBold"/>
                            <TextBox Text="{Binding Config.ComPort}" Padding="5"/>
                        </StackPanel>
                        <StackPanel Grid.Column="1" Margin="10,0,0,0">
                            <TextBlock Text="Baud Rate" FontWeight="SemiBold"/>
                            <TextBox Text="{Binding Config.BaudRate}" Padding="5"/>
                        </StackPanel>
                    </Grid>

                    <CheckBox IsChecked="{Binding Config.IsSimulationMode}" Content="Chế độ giả lập (Không cần thiết bị thật)" Margin="0,10,0,0"/>
                </StackPanel>
            </GroupBox>

            <GroupBox Header="Máy Chủ PACS / HIS" Padding="15" Margin="0,0,0,20">
                <StackPanel>
                    <TextBlock Text="API Endpoint URL" FontWeight="SemiBold"/>
                    <TextBox Text="{Binding Config.ServerUrl}" Padding="5" Margin="0,5,0,0"/>
                </StackPanel>
            </GroupBox>

            <GroupBox Header="Nâng Cao (Developer)" Padding="15" Margin="0,0,0,20">
                <StackPanel>
                    <CheckBox IsChecked="{Binding Config.EnableRawLogging}" Content="Ghi log chi tiết (Raw Data Trace) - Chỉ dùng khi sửa lỗi"/>
                </StackPanel>
            </GroupBox>

            <Button Command="{Binding SaveCommand}" Content="LƯU CẤU HÌNH" 
                    Height="45" Width="200" HorizontalAlignment="Right"
                    Background="#0D6EFD" Foreground="White" FontWeight="Bold"/>
        </StackPanel>
    </Grid>
</UserControl>
<UserControl x:Class="MedicalEcgClient.Views.LoginView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:vm="clr-namespace:MedicalEcgClient.ViewModels">
    <Grid>
        <Grid.Background>
            <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                <GradientStop Color="#0D6EFD" Offset="0"/>
                <GradientStop Color="#0043A8" Offset="1"/>
            </LinearGradientBrush>
        </Grid.Background>

        <Border Background="White" Width="400" Height="520" CornerRadius="10">
            <Border.Effect>
                <DropShadowEffect Color="Black" Direction="320" ShadowDepth="5" Opacity="0.3" BlurRadius="20"/>
            </Border.Effect>

            <StackPanel Margin="40" VerticalAlignment="Center">
                <TextBlock Text="&#xEC06;" FontFamily="Segoe MDL2 Assets" FontSize="48" Foreground="#0D6EFD" HorizontalAlignment="Center" Margin="0,0,0,10"/>

                <TextBlock Text="MEDICAL ECG CLIENT" FontSize="24" FontWeight="Bold" Foreground="#0D6EFD" HorizontalAlignment="Center" Margin="0,0,0,5"/>
                <TextBlock Text="Đăng nhập hệ thống" FontSize="16" Foreground="Gray" HorizontalAlignment="Center" Margin="0,0,0,30"/>

                <TextBlock Text="Tên đăng nhập" FontWeight="SemiBold" Margin="0,0,0,5"/>
                <Border BorderBrush="#DDD" BorderThickness="1" CornerRadius="5" Margin="0,0,0,15">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="40"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <Border Background="#F5F5F5" CornerRadius="4,0,0,4">
                            <TextBlock Text="&#xE77B;" FontFamily="Segoe MDL2 Assets" VerticalAlignment="Center" HorizontalAlignment="Center" Foreground="Gray"/>
                        </Border>
                        <TextBox Grid.Column="1" Text="{Binding Username, UpdateSourceTrigger=PropertyChanged}" 
                                 Padding="10,0" Height="40" VerticalContentAlignment="Center" BorderThickness="0" Background="Transparent"/>
                    </Grid>
                </Border>

                <TextBlock Text="Mật khẩu" FontWeight="SemiBold" Margin="0,0,0,5"/>
                <Border BorderBrush="#DDD" BorderThickness="1" CornerRadius="5" Margin="0,0,0,20">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="40"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <Border Background="#F5F5F5" CornerRadius="4,0,0,4">
                            <!-- Icon Lock: E72E -->
                            <TextBlock Text="&#xE72E;" FontFamily="Segoe MDL2 Assets" VerticalAlignment="Center" HorizontalAlignment="Center" Foreground="Gray"/>
                        </Border>
                        <PasswordBox x:Name="TxtPassword" Grid.Column="1" 
                                     Padding="10,0" Height="40" VerticalContentAlignment="Center" BorderThickness="0" Background="Transparent"/>
                    </Grid>
                </Border>

                <TextBlock Text="{Binding ErrorMessage}" Foreground="Red" TextWrapping="Wrap" Margin="0,0,0,15" HorizontalAlignment="Center"/>

                <Button Command="{Binding LoginCommand}" 
                        CommandParameter="{Binding ElementName=TxtPassword}"
                        Content="ĐĂNG NHẬP" 
                        IsDefault="True"
                        Height="45" Background="#0D6EFD" Foreground="White" FontSize="16" FontWeight="Bold" Cursor="Hand"
                        IsEnabled="{Binding IsLoading, Converter={StaticResource BoolToVis}, ConverterParameter=Inverse}">
                    <Button.Resources>
                        <Style TargetType="Border">
                            <Setter Property="CornerRadius" Value="5"/>
                        </Style>
                    </Button.Resources>
                </Button>

                <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="15" 
                            Visibility="{Binding IsLoading, Converter={StaticResource BoolToVis}}">
                    <TextBlock Text="&#xE768;" FontFamily="Segoe MDL2 Assets" Foreground="#0D6EFD" RenderTransformOrigin="0.5, 0.5" Margin="0,0,10,0">
                        <TextBlock.RenderTransform>
                            <RotateTransform Angle="0" x:Name="SpinnerRotate"/>
                        </TextBlock.RenderTransform>
                        <TextBlock.Triggers>
                            <EventTrigger RoutedEvent="Loaded">
                                <BeginStoryboard>
                                    <Storyboard>
                                        <DoubleAnimation Storyboard.TargetName="SpinnerRotate" Storyboard.TargetProperty="Angle" 
                                                         From="0" To="360" Duration="0:0:1" RepeatBehavior="Forever"/>
                                    </Storyboard>
                                </BeginStoryboard>
                            </EventTrigger>
                        </TextBlock.Triggers>
                    </TextBlock>
                    <TextBlock Text="Đang kết nối server..." Foreground="Gray"/>
                </StackPanel>
            </StackPanel>
        </Border>
    </Grid>
</UserControl>
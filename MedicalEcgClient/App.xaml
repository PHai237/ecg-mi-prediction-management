<Application x:Class="MedicalEcgClient.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:MedicalEcgClient"
             xmlns:vm="clr-namespace:MedicalEcgClient.ViewModels"
             xmlns:views="clr-namespace:MedicalEcgClient.Views"
             xmlns:converters="clr-namespace:MedicalEcgClient.Converters">

    <Application.Resources>
        <ResourceDictionary>
            <converters:BooleanToRedConverter x:Key="BooleanToRedConverter"/>
            <BooleanToVisibilityConverter x:Key="BoolToVis"/>

            <DataTemplate DataType="{x:Type vm:LoginViewModel}">
                <views:LoginView />
            </DataTemplate>

            <DataTemplate DataType="{x:Type vm:PatientListViewModel}">
                <views:PatientListView />
            </DataTemplate>

            <DataTemplate DataType="{x:Type vm:PatientHistoryViewModel}">
                <views:PatientHistoryView />
            </DataTemplate>

            <DataTemplate DataType="{x:Type vm:EcgMonitorViewModel}">
                <views:EcgMonitorView />
            </DataTemplate>

            <DataTemplate DataType="{x:Type vm:CameraViewModel}">
                <views:CameraView />
            </DataTemplate>

            <DataTemplate DataType="{x:Type vm:SettingsViewModel}">
                <views:SettingsView />
            </DataTemplate>
        </ResourceDictionary>
    </Application.Resources>
</Application>